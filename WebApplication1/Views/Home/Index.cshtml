@{
    ViewBag.Title = "Home Page";
}


<div class="row">
    <div class="col-md-4 col-md-offset-4">
		<div class="calculator">
			<form>
				<div class="form-group row">
					<label for="firstNum" class="col-sm-2 col-form-label">First Number</label>
					<div class="col-sm-10">
						<input type="text" class="form-control" id="firstNum">
					</div>
				</div>
				<div class="form-group row">
					<label for="secondNum" class="col-sm-2 col-form-label">Second Number</label>
					<div class="col-sm-10">
						<input type="text" class="form-control" id="secondNum">
					</div>
				</div>
				<div class="row">
					<input type="button" class="btn btn-sm btn-primary" value="Sum" onclick="sum()" />
					<input type="button" class="btn btn-sm btn-primary" value="Clear" onclick="clearVal()" />
				</div>

				<div class="form-group row" style="margin-top: 15px;">
					<label for="result" class="col-sm-2 col-form-label">Result</label>
					<div class="col-sm-10">
						<input type="text" class="form-control" id="result">
					</div>
				</div>
			</form>
		</div>
	</div>
</div>
